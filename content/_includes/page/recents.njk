{%- set recents_type_tags = [
  'Article',
  'Podcast',
  'Video',
  'Link',
  'Case Study'
] -%}
{%- set tag_ribbon_mapping = {
  'Article': 'Articles',
  'Podcast': 'Podcasts',
  'Video': 'Videos',
  'Link': 'Links',
  'Case Study': 'Case Studies'
} -%}

{%- set post_type = tags | pageType ('tag') -%}

{% for recent_tag in recents_type_tags %}
  {%- if recent_tag === post_type -%}
    {%- if collections[post_type] | length > 0 -%}
      <section data-list="tag" data-typeset>
        {{ post.recent_posts(
          collections[post_type],
          collections,
          banner_title=tag_ribbon_mapping[recent_tag],
          page_url=page.url
        ) }}
      </section>
    {%- endif -%}

  {%- endif -%}
{% endfor %}
