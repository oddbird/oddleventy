{%- endmacro %}


{# @docs
label: icon_link
category: Links
note: |
  Links with icons require special handling
  in order to avoid awkward underline collisions.
params:
  icon:
    type: include path
  text:
    type: string
  url:
    type: url
    default: none
  class:
    type: string
    default: none
  attrs:
    type: object
    default: '{}'
#}
{% macro icon_link(
  icon,
  text,
  url=none,
  class=none,
  attrs={}
) -%}
  {%- set content -%}
    {%- include icon + '.svg' -%}
    <span class="link-text">{{ text | safe }}</span>
  {%- endset -%}

  {{- link_if(
    content=content,
    url=url,
    class=[class, 'icon-link'] | join(' ') if class else 'icon-link',
    attrs=attrs
  ) -}}
{%- endmacro %}


{# @docs
label: link_if
category: Links
note: Return a link or span with given attributes
params:
  content:
    type: string
  url:
    type: url
    default: none
  class:
    type: string
    default: none
  attrs:
    type: object
    default: '{}'
#}
{% macro link_if(
  content,
  url=none,
  class=none,
  attrs={}
) -%}
  {%- set content = content if (content != none) else caller() -%}
  {%- if url -%}
  <a href="{{ url }}" {{ attr_if('class', class) }} {{ show_attrs(attrs) }}>{{
    content | safe
  }}</a>
  {%- else -%}
  <span {{ attr_if('class', class) }} {{ show_attrs(attrs) }}>{{
    content | safe
  }}</span>
  {%- endif -%}
{%- endmacro %}


{# @docs
label: main_action
category: links
note: |
  Generate a "main-action" link,
  generally one-per-section.
params:
  content:
    type: string
  url:
    type: url
    default: none
#}
{% macro main_action(
  content=none,
  url=none
) %}
  {%- set content = content if (content != none) else caller() -%}
  <p class="main-action">{{ link_if(content, url) }}</p>
{% endmacro %}


{# @docs
label: datetime
category: Time
note: Format dates and times for posts
params:
  start:
    type: date
  end:
    type: date | none
  format:
    type: string | date-format
    default: long
  is_pubdate:
    type: boolean
    default: false
#}
{% macro datetime(
  start,
  end,
  format='long',
  is_pubdate=false,
  prefix=none
) %}
  {%- set ranges = {
    'same-y': {
      'start': 'month',
      'end': 'month_year'
    },
    'same-m': {
      'start': 'month_day',
      'end': 'day' if (format == 'month_day') else 'day_year'
    }
  } -%}

  {%- set ongoing = (format == 'range') and not end -%}
  {%- set is_range = end and (start | string != end | string) and (not ongoing) -%}

  {%- if prefix %}
    {%- set prefix = 'since' if ongoing else 'on' -%}
    {%- set prefix = 'from' if is_range else prefix -%}
    <i>{{ prefix }}</i>
  {% endif -%}

  <time
    datetime="{{ start | getDate('iso') }}"
    {{ attr_if('pubdate', is_pubdate) }}>

    {% if ongoing %}
      {{ start | getDate('year') }}
    {% elif is_range %}
      {% set start_m = start | getDate('long_month') %}
      {% set start_y = start | getDate('year') %}
      {% set end_m = end | getDate('long_month') %}
      {% set end_y = end | getDate('year') %}

      {% set same = 'same-y' if (start_y == end_y) else none %}
      {% set same = 'same-m' if same and (start_m == end_m) else same %}

      {{ start | getDate(ranges[same].start or 'month_year') }}
      {{- '--' | typogr | safe -}}
      {{ end | getDate(ranges[same].end or 'month_year') }}

    {% else %}
      {{ start | getDate('month_year' if format == 'range' else format) }}
    {% endif %}
  </time>
{% endmacro %}
