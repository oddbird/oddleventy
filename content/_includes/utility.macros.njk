{# @docs
label: icon_link
category: Links
note: |
  Links with icons require special handling
  in order to avoid awkward underline collisions.
params:
  icon:
    type: include path
  text:
    type: string
  url:
    type: url
    default: none
  class:
    type: string
    default: none
  attrs:
    type: dictionary
    default: '{}'
#}
{% macro icon_link(
  icon,
  text,
  url=none,
  class=none,
  attrs={}
) -%}
  {%- set content -%}
    {%- include icon + '.svg' -%}
    <span class="link-text">{{ text | safe }}</span>
  {%- endset -%}

  {{- link_if(
    content=content,
    url=url,
    class=[class, 'icon-link'] | join(' ') if class else 'icon-link',
    attrs=attrs
  ) -}}
{%- endmacro %}


{# @docs
label: link_if
category: Links
note: Return a link or span with given attributes
params:
  content:
    type: string
  url:
    type: url
    default: none
  class:
    type: string
    default: none
  attrs:
    type: dictionary
    default: '{}'
#}
{% macro link_if(
  content,
  url=none,
  class=none,
  attrs={}
) -%}
  {%- set content = content if (content != none) else caller() -%}
  {%- if url -%}
  <a href="{{ url | url }}" {{ attr_if('class', class) }} {{ show_attrs(attrs) }}>{{
    content | safe
  }}</a>
  {%- else -%}
  <span {{ attr_if('class', class) }} {{ show_attrs(attrs) }}>{{
    content | safe
  }}</span>
  {%- endif -%}
{%- endmacro %}


