  Returns a given number of featured
  posts from a collection for the
  homepage "featured posts" section
params:
  collections:
    type: 11ty collections object
  limit:
    type: number
    default: 4
  banner_title:
    type: string
    default: 'Featured Posts'
  class:
    type: string
    note: optional class added to wrapping `<ol>` element
    default: none
#}
