label: title
category: metadata
note: Generate a linked heading with the post title
params:
  post:
    type: 11ty page object
#}
{% macro banner(
  post,
  level=3,
  attrs={},
  id_prefix='post',
  called=false
) -%}
  {%- h level, {
    'class': 'item-title',
    'id': id(post, id_prefix)
  } | merge(attrs) -%}
      {{ utility.link_if(
        caller() if called else name(post),
        post.url,
        'title-link'
      ) }}
  {%- endh -%}
{%- endmacro %}


