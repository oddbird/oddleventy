  collections,
  limit=4,
  banner_title='Featured Posts',
  class=none
) %}
  {%- set featured = collections._post | isHome(limit) -%}
  {%- if featured | length -%}
    {{ list(
      featured,
      collections=collections,
      title=banner_title,
      override_large=true,
      class=class
    ) }}
  {%- endif -%}
{% endmacro %}
