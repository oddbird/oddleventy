{% import 'contact.macros.njk' as contact %}
{% import 'utility.macros.njk' as utility %}

{% set add_cta = page.url | addCallToAction %}
{% if add_cta %}
    {% include './cta.njk' %}
{% endif %}

<div
  data-layout="footer">
  {% if page.url != '/contact/' %}
    <aside aria-label="contact">
      {% if not add_cta %}
        <div class="contact-form-intro">
          <h3>Let's chat about your web project</h3>
          <p>
            Fill out the form, <a href="https://calendly.com/oddbird/discovery"> schedule a call</a>, send us an <a href="mailto:birds@oddbird.net"> email</a>, or find us on <a href="https://twitter.com/oddbird"> Twitter</a> or <a href="https://github.com/oddbird">GitHub</a>.
          <p>
        </div>
      {% endif %}
      {{ contact.form(name='contact-footer') }}
    </aside>
  {% endif %}

  <footer role="contentinfo">
    <div class="colophon">
      {% set colophon = collections.all | findPage('data.info_slug', 'colophon') %}
      {{ colophon.templateContent | safe }}
    </div>

    <div class="legal">
      {% set info = collections.all | findPage('data.info_slug', 'legal') %}
      {{ info.templateContent | safe }}
    </div>
  </footer>
</div>
