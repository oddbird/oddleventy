{% import 'quotes.macros.njk' as quotes %}
{% import 'layout.macros.njk' as layout %}
{% import 'events.macros.njk' as events %}
{% import 'post.macros.njk' as post %}

{{ quotes.find(
  collections.all,
  slugs=['spot-on', 'audit']
) }}

{{ events.section(
  title='Upcoming Events',
  events=collections.all | getEvents | getFuture,
  all=false,
  by_bird=collections
) }}

{{ layout.title('Talks & Workshops') }}
{% call layout.grid('training') %}
  {% for item in collections._training | eventSort | reverse %}
    <article {{ post.aria_label(item) }} class="training-item">
      {{ post.hero(item.data.image, 'post') }}
      <header class="training-header">
        {{ post.banner(item) }}
        {{ post.subtitle(item.data.sub) }}
        {{ post.byline(item, collections, dateformat='range') }}
      </header>
      {% if item.data.events %}
        <div class="training-detail">
          {{ post.eventpreview(item.data.events) }}
        </div>
      {% endif %}
    </article>
  {% endfor %}
{% endcall %}
