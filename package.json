{
  "name": "oddsite",
  "version": "4.0.0",
  "homepage": "https://www.oddbird.net",
  "title": "OddSite",
  "repository": {
    "type": "git",
    "url": "https://github.com/oddbird/oddleventy.git"
  },
  "private": true,
  "engines": {
    "node": "^16",
    "yarn": "^3"
  },
  "scripts": {
    "js": "rollup -c",
    "sass": "node scripts/compile-sass.js",
    "sassdoc": "sassdoc src/scss/**/*.scss",
    "prettier:js": "prettier --write \"**/*.js\"",
    "lint:other": "prettier --write \"**/*.{json,yml}\"",
    "eslint": "eslint \"*.js\" \"**/*.js\" --fix",
    "lint": "run-p lint:js lint:sass lint:other",
    "lint:js": "run-s prettier:js eslint",
    "lint:sass": "stylelint \"**/*.scss\" --fix",
    "eleventy": "eleventy",
    "eleventy:serve": "eleventy --serve",
    "watch:sass:compile": "chokidar \"src/scss/**/*.scss\" \"./.sassdocrc\" -c \"yarn run-p sass sassdoc\"",
    "watch:sass:lint": "chokidar \"**/.stylelintrc.yml\" -c \"yarn lint:sass\"",
    "watch:sass": "run-p watch:sass:compile watch:sass:lint",
    "watch:js:compile": "rollup -c --watch",
    "watch:js:lint": "chokidar \"**/.eslintrc.yml\" -c \"yarn lint:js\"",
    "watch:js": "run-p watch:js:compile watch:js:lint",
    "site:clean": "rimraf './_site/!(assets)' './_site/assets/!(images)'",
    "assets:clean": "rimraf './_built/'",
    "serve": "npm-run-all build:assets build:site -p eleventy:serve watch:js watch:sass",
    "test": "jest",
    "build:site": "run-s site:clean sassdoc",
    "build:assets": "npm-run-all assets:clean -p js sass",
    "build": "run-s build:assets build:site eleventy",
    "update-oss-docs": "./bin/update-oss-docs",
    "prod": "ELEVENTY_ENV=production run-s update-oss-docs build",
    "checklinks": "yarn dlx hyperlink --canonicalroot https://www.oddbird.net/ -r -p --skip \"_site/feed.atom\" --skip \"docs.djangoproject.com\" --skip \"/docs/\" --skip \"codepen.io\" --skip \"github.com\" --skip \"caniuse.com\" --skip \"youtu.be\" --skip \"stackoverflow.com/users/\" _site/index.html",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "#": "link:./src/filters",
    "@11ty/eleventy": "^0.12.1",
    "@11ty/eleventy-img": "^1.0.0",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.1.3",
    "@babel/core": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "@frctl/fractal": "^1.5.13",
    "@frctl/nunjucks": "^2.0.14",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.1",
    "@tommoor/remove-markdown": "^0.3.2",
    "@typescript-eslint/parser": "^5.7.0",
    "@yarnpkg/sdks": "^2.5.1-rc.6",
    "accoutrement": "^4.0.0-beta.3",
    "autoprefixer": "^10.4.0",
    "babel-jest": "^27.4.5",
    "cascading-color-systems": "0.1.0-beta.15",
    "chalk": "^4.1.2",
    "chokidar-cli": "^3.0.0",
    "core-js": "^3.19.3",
    "cssremedy": "0.1.0-beta.2",
    "date-fns": "^2.27.0",
    "date-fns-tz": "^1.1.6",
    "doxray": "^0.10.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "js-yaml": "^4.1.0",
    "lint-staged": "^12.1.2",
    "lodash": "^4.17.21",
    "markdown-it": "^12.3.0",
    "markdown-it-anchor": "^8.4.1",
    "markdown-it-footnote": "^3.0.3",
    "markdown-it-mark": "^3.0.1",
    "mockdate": "^3.0.5",
    "netlify-plugin-11ty": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.61.1",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.45.0",
    "sassdoc": "^2.7.3",
    "sassdoc-theme-herman": "^4.0.2",
    "slugify": "^1.6.3",
    "striptags": "^3.2.0",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard-scss": "^3.0.0",
    "stylelint-prettier": "^2.0.0",
    "truncate-html": "^1.0.4",
    "typescript": "^4.5.4",
    "typogr": "^0.6.8"
  },
  "resolutions": {
    "ansi-regex": "^5.0.1",
    "css-what": "^5.0.1",
    "ejs": "^3.1.6",
    "glob-parent": "^5.1.2",
    "marked": "^2.0.0",
    "nth-check": "^2.0.1",
    "sassdoc-extras": "^3.0.0",
    "semver-regex": "^3.1.3"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.scss": [
      "stylelint --fix"
    ],
    "*.{json,yml}": [
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.1.1"
}
